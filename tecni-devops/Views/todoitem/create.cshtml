@model ToDoItem

@{
    ViewData["Title"] = "Crear ToDo";
}

<h2>Crear nuevo ToDo</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Título:</label>
        <input asp-for="Titulo" />
    </div>
    <div>
        <label>Completado:</label>
        <input asp-for="EstaCompleto" type="checkbox" />
    </div>
    <button type="submit">Crear</button>
</form>

<a href="/ToDoItem">Volver</a>
